//---------------------------------------------------------------------------
    UINT8   IsctConfiguration;
    UINT8   ISCTNOTIFICATION;
    UINT8   ISCTWLAN;
    UINT8   ISCTWWAN;
    UINT8   ISCTSleepFormat;
    UINT8   ISCTRFKillSwitch;
